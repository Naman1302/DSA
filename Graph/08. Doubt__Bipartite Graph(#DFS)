bool solve(vector<int> adj[],int curr,vector<int> &color,int paint,int p){
        
        if(color[curr]!=-1 and color[curr]!=paint)
            return false;
        color[curr]= paint;
            for(auto i:adj[curr]){
                return solve(adj,i,color,paint^1,curr);
            }
        return true;
    }
	bool isBipartite(int v, vector<int>adj[]){
	    // Code here
	    vector<int> color(v+1,-1);
	    for(int i=0;i<v;i++){
	        if(color[i]==-1&& !solve(adj,i,color,0,-1)){
	            return false;
	        }
	    }
	    return true;
	}
