class Solution {
public:
    string shortestCommonSupersequence(string s1, string s2) {
        int n=s1.length(),m=s2.length(),i=0,j=0;
        string ans="";
        int dp[n+1][m+1];
        
        //LCS==============
        
        for(i=0;i<=n;i++){
            for(j=0;j<=m;j++){
                if(i==0||j==0)
                    dp[i][j]=0;
                else{
                    if(s1[i-1]==s2[j-1])
                        dp[i][j]=1+dp[i-1][j-1];
                    else
                        dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
                }
            }
        }
        
        //==============
        
        while(i>0 && j>0){
            if(s1[i-1]==s2[j-1]){
                ans.push_back(s1[i-1]);
                i--;
                j--;
            }
            else{
                if(dp[i][j-1]<dp[i-1][j]){
                    ans.push_back(s1[i-1]);
                    i--;
                }
                else{
                    ans.push_back(s2[j-1]);
                    j--;
                }
            }   
        }
        
        while(i>0){
            ans.push_back(s1[i-1]);
            i--;
        }
        while(j>0){
            ans.push_back(s2[j-1]);
            j--;
        }    
        reverse(ans.begin(),ans.end());
        return ans;
    }
};
